@model VmMessage
@{
    ViewData["Title"] = "Message";
}

<div class="container-fluid h-100">
    <div class="row justify-content-center h-100">
        <div class="col-md-8 col-xl-6 chat">
            <div class="card">
                <div class="card-header msg_head">
                    <div class="d-flex bd-highlight">
                        <div class="img_cont">
                            <img src="https://static.turbosquid.com/Preview/001292/481/WV/_D.jpg" class="rounded-circle user_img">
                            <span class="online_icon"></span>
                        </div>
                        <div class="user_info">
                            <span>@Model.user.Name @Model.user.Surname</span>
                            <p id="mcPar"><span id="messageCount" style="font-size: 10px !important; color: rgba(255,255,255,0.6) !important;">@Model.Messages.Count</span> <span style="font-size: 10px !important; color: rgba(255,255,255,0.6) !important;">Messages</span> </p>
                        </div>
                        <div class="video_cam">
                            <span><i class="fas fa-video"></i></span>
                            <span><i class="fas fa-phone"></i></span>
                        </div>
                    </div>
                    <span id="action_menu_btn"><i class="fas fa-ellipsis-v"></i></span>
                    <div class="action_menu">
                        <ul>
                            <li><i class="fas fa-user-circle"></i> View profile</li>
                            <li><i class="fas fa-users"></i> Add to close friends</li>
                            <li><i class="fas fa-plus"></i> Add to group</li>
                            <li><i class="fas fa-ban"></i> Block</li>
                        </ul>
                    </div>
                </div>
                <div class="card-body msg_card_body" id="msg_card_body2">
                    @{
                        foreach (var m in Model.Messages)
                        {
                            if (m.SenderId == Model.senderId)
                            {
                                <div class="d-flex justify-content-end mb-4">
                                    <div class="msg_cotainer_send">
                                        @m.Context
                                        <span class="msg_time_send">@m.Sender.Name</span>
                                    </div>
                                </div>
                            }
                            else
                            {


                                <div class="d-flex justify-content-start mb-4">
                                    <div class="msg_cotainer">
                                        @m.Context
                                        <span class="msg_time">@Model.user.Name</span>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
                <div class="card-footer">
                    <div class="input-group">
                        <textarea id="chatTextInput" class="form-control type_msg" placeholder="Type your message..."></textarea>
                        <div class="input-group-append">
                            <button type="button" id="chatSendBtn" class="input-group-text send_btn">
                                <span class="input-group-text send_btn"><i class="fas fa-location-arrow"></i></span>
                            </button>
                        </div>
                    </div>
                </div>
                <input hidden id="recieverId" value="@Model.user.Id"/>
                <input hidden id="senderId" value="@Model.senderId"/>

            </div>
        </div>
    </div>
</div>

